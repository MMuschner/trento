{{ define "content" }}
    <div class="col">
        <h1>SAP System details</h1>
        <dl class="inline">
            <dt class="inline">Name</dt>
            <dd class="inline">{{ (index .SAPSystemList 0).SID }}</dd>
            <dt class="inline">Type</dt>
            <dd class="inline">{{if eq (index .SAPSystemList 0).Type 1 }}HANA Database{{ else if eq (index .SAPSystemList 0).Type 2 }}Application server{{ end }}</dd>
        </dl>
        <hr/>
        <h1>Layout</h1>
        {{ template "sap_system_layout" .SAPSystemList }}
        <hr/>
        <h1>Hosts</h1>
        {{ template "hosts_table" . }}
    </div>
{{ end }}
